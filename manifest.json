{
  "manifest_version": 2,
  "name": "アマゾンで詐欺や転売を許さない",
  "description": "私たちはアマゾンで詐欺や転売を許しません",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://amazon.co.jp/dp/*",
        "https://www.amazon.co.jp/dp/*",
        "https://amazon.co.jp/*/dp/*",
        "https://www.amazon.co.jp/*/dp/*"
      ],
      "js": ["js/content.js"]
    }
  ],
  "permissions": [
    "https://amazon.co.jp/",
    "https://www.amazon.co.jp/"
  ]
}